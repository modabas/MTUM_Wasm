@layout AuthLayout

<div class="default-input-card">
    <MudCard Elevation="1">
        <MudForm Model="@_forgotPasswordRequest" @ref="_form" Validation="@(_forgotPasswordRequestValidator.ValidateValue)" ValidationDelay="1000">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5">Forgot password</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudStack Spacing="3">
                    <MudTextField Label="Email"
                                  @bind-Value="_forgotPasswordRequest.EmailAddress"
                                  For="@(() => _forgotPasswordRequest.EmailAddress)"
                                  Mask="@emailMask"
                                  HelperText="@emailMask.Mask"
                                  Immediate="true" />
                </MudStack>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="(() => Submit())">Submit</MudButton>
            </MudCardActions>
        </MudForm>
    </MudCard>
</div>